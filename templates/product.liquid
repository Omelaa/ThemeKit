<h1>{{ product.title }}</h1>
<span>{{ product.price | money }}</span>
<div>
  {{ product.description }}
</div>
{% form 'product', product %}
  <select name="id">
    {% for variant in product.variants %}
      <option value="{{variant.id}}">
        {{ variant.title }}
      </option>
    {% endfor %}
  </select>
{% endform %}
 